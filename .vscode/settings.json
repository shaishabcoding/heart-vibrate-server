{
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "editor.formatOnType": false, // required
  "editor.formatOnPaste": true, // optional
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange", // optional but recommended
  "vs-code-prettier-eslint.prettierLast": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#f8fedf",
    "activityBar.background": "#f8fedf",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#07b0d8",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#f8fedf",
    "statusBar.background": "#ecfdad",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#e0fc7b",
    "statusBarItem.remoteBackground": "#ecfdad",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#ecfdad",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#ecfdad99",
    "titleBar.inactiveForeground": "#15202b99"
  },
  "peacock.color": "#ecfdad" // set as "true" to run 'prettier' last not first
}
